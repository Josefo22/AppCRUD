<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="#F5F5F5">

    <!-- Imagen de contacto -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="10dp"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_contacto"
        tools:srcCompat="@drawable/ic_contacto"
        android:contentDescription="Foto de contacto" />

    <!-- Contenedor de la información de contacto -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@id/imageView"
        android:layout_alignParentTop="true">

        <!-- Nombre del contacto -->
        <TextView
            android:id="@+id/viewNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Contenedor de los detalles: Teléfono, Correo, Dirección, Deuda -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp">

            <!-- Teléfono -->
            <TextView
                android:id="@+id/viewTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingBottom="2dp" />

            <!-- Correo -->
            <TextView
                android:id="@+id/viewCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingBottom="2dp" />

            <!-- Dirección -->
            <TextView
                android:id="@+id/viewDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingBottom="2dp" />

            <!-- Deuda -->
            <TextView
                android:id="@+id/viewDeuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingBottom="2dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
